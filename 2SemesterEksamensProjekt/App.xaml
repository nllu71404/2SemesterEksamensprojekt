<Application x:Class="_2SemesterEksamensProjekt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_2SemesterEksamensProjekt"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <!-- Farver -->
        <Color x:Key="AccentLight">#667EEA</Color>
        <Color x:Key="Accent">#5A67D8</Color>
        <Color x:Key="AccentDark">#764BA2</Color>
        <Color x:Key="TitleColor">#2C3E50</Color>

        <SolidColorBrush x:Key="AccentBrush"      Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="TitleBrush"       Color="{StaticResource TitleColor}"/>
        <SolidColorBrush x:Key="CardBrush"        Color="#F2FFFFFF"/>
        <SolidColorBrush x:Key="ButtonBgBrush"    Color="White"/>
        <SolidColorBrush x:Key="ButtonFgBrush"    Color="#2C3E50"/>

        <!-- Baggrund -->
        <LinearGradientBrush x:Key="MainGradientBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource AccentLight}" Offset="0"/>
            <GradientStop Color="{StaticResource AccentDark}"  Offset="1"/>
        </LinearGradientBrush>

        <!-- Vinduer & sider -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource MainGradientBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- VIGTIGT: Pages skal være gennemsigtige -->
        <Style TargetType="Page">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Gør også Frame gennemsigtig -->
        <Style TargetType="Frame">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Titel -->
        <Style x:Key="DashboardTitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="6" Opacity="0.25" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Knap (ingen triggers/animationer) -->
        <Style TargetType="Button" x:Key="DashboardButton">
            <Setter Property="Background" Value="{StaticResource ButtonBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonFgBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
