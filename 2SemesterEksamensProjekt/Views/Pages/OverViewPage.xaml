<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TimeRegistrationOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" 
      d:DesignWidth="1200"
      Title="TimeRegistrationOverviewPage"
      Style="{StaticResource BasePageStyle}">

    <!-- Fælles afrundede hjørner + baggrund -->
    <Border Style="{StaticResource RoundedPageBorderStyle}">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titel -->
                <RowDefinition Height="Auto"/>
                <!-- Søgesektion -->
                <RowDefinition Height="*"/>
                <!-- Resultater -->
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0" 
                       Text="Tidsregistrerings oversigt"
                       Style="{StaticResource DashboardTitleText}"
                       FontSize="22"
                       Margin="0,0,0,30"/>

            <!-- Søgesektion -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Padding="20"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Søgefelter -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vælg måned -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Vælg måned"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="#322E40"
                                    BorderBrush="{StaticResource ButtonBorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Height="45">
                                <ComboBox ItemsSource="{Binding Months}"
                                          SelectedItem="{Binding SelectedMonth, Mode=TwoWay}"
                                          Height="45"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          Foreground="White"
                                          Padding="10,0,0,0"/>
                            </Border>
                        </StackPanel>

                        <!-- Virksomhed - projekt titel -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Virksomhed - projekt titel"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="#322E40"
                                    BorderBrush="{StaticResource ButtonBorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Height="45">
                                <ComboBox Text="{Binding CompanyProjectFilter, UpdateSourceTrigger=PropertyChanged}"
                                         Height="45"
                                         Padding="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Emne -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Emne"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,8"/>
                            <Border Background="#322E40"
                                    BorderBrush="{StaticResource ButtonBorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Height="45">
                                <ComboBox Text="{Binding TopicFilter, UpdateSourceTrigger=PropertyChanged}"
                                         Height="45"
                                         Padding="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Søg knap -->
                    <Button Grid.Row="1"
                            Content="Søg"
                            Style="{StaticResource FlatRoundedButton}"
                            Height="45"
                            Width="150"
                            HorizontalAlignment="Left"
                            Command="{Binding SearchCommand}"/>
                </Grid>
            </Border>

            <!-- Resultater sektion -->
            <Border Grid.Row="2"
                    Style="{StaticResource CardStyle}"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header med titel og total timer -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Tidsregistreringsliste"
                                   Style="{StaticResource DashboardTitleText}"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>

                        <!-- Timer i alt box -->
                        <Border Grid.Column="1"
                                Background="#322E40"
                                BorderBrush="{StaticResource ButtonBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Timer i alt:"
                                           FontSize="12"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding TotalHours}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- DataGrid med tidsregistreringer -->
                    <Border Grid.Row="1"
                            BorderBrush="{StaticResource ButtonBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="8">
                        <DataGrid ItemsSource="{Binding FilteredTimeRecords}"
                                  SelectedItem="{Binding SelectedTimeRecord, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  Background="#1F1B2B"
                                  Foreground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{StaticResource ButtonBorderBrush}"
                                  RowBackground="#1F1B2B"
                                  AlternatingRowBackground="#272537"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#322E40"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2F2838"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2F2838"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tid.Reg.Nr" 
                                                    Binding="{Binding TimerId}" 
                                                    Width="0.8*"/>
                                <DataGridTextColumn Header="Dato" 
                                                    Binding="{Binding StartTime, StringFormat=dd/MM-yyyy}" 
                                                    Width="1.2*"/>
                                <DataGridTextColumn Header="Tid" 
                                                    Binding="{Binding DisplayTime}" 
                                                    Width="1*"/>
                                <DataGridTextColumn Header="Virksomhed" 
                                                    Binding="{Binding Companies}" 
                                                    Width="1.5*"/>
                                <DataGridTextColumn Header="Projekt" 
                                                    Binding="{Binding Projects}" 
                                                    Width="1.5*"/>
                                <DataGridTextColumn Header="Emner" 
                                                    Binding="{Binding Topics}" 
                                                    Width="1.2*"/>
                                <DataGridTextColumn Header="Bemærkninger" 
                                                    Binding="{Binding Note}" 
                                                    Width="2.8*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#999999"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Eksportér knap -->
                    <Button Grid.Row="2"
                            Content="Eksportér til CSV"
                            Style="{StaticResource FlatRoundedButton}"
                            Height="45"
                            Width="200"
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0"
                            Command="{Binding CsvCommand}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
