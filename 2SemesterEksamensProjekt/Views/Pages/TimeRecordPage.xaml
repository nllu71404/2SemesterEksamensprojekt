<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TimeRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" 
      d:DesignWidth="1200"
      Title="TimeRecordPage"
      Style="{StaticResource BasePageStyle}">

    <!-- Fælles afrundede hjørner + baggrund -->
    <Border Style="{StaticResource RoundedPageBorderStyle}">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0" 
                       Text="Gem tidsregistrering"
                       Style="{StaticResource DashboardTitleText}"
                       FontSize="22"
                       Margin="0,0,0,30"/>

            <!-- Timer info -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <!-- Timer navn -->
                    <StackPanel Margin="0,0,40,0">
                        <TextBlock Text="Stopurets navn"
               FontSize="15"
               Foreground="#A0A0A0"
               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TimerName}"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"/>
                    </StackPanel>

                    <!-- Total tid -->
                    <StackPanel>
                        <TextBlock Text="Total tid"
                                   FontSize="15"
                                   Foreground="#A0A0A0"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ElapsedTimeDisplay}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>

                </StackPanel>
            </Border>

            <!-- Hovedindhold -->
            <Border Grid.Row="2"
                    Style="{StaticResource CardStyle}"
                    Padding="40">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Virksomhed -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Vælg virksomhed"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <Border Background="#322E40"
                                BorderBrush="{StaticResource ButtonBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="5">
                            <ComboBox ItemsSource="{Binding Companies}"
                                      SelectedItem="{Binding SelectedCompany, Mode=TwoWay}"
                                      DisplayMemberPath="CompanyName"
                                      Height="45"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Foreground="Black"/>
                        </Border>
                    </StackPanel>

                    <!-- Projekt -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Vælg projekt"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <Border Background="#322E40"
                                BorderBrush="{StaticResource ButtonBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="5">
                            <ComboBox ItemsSource="{Binding Projects}"
                                      SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                                      DisplayMemberPath="Title"
                                      Height="45"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Foreground="Black"/>
                        </Border>
                    </StackPanel>

                    <!-- Emne -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Vælg emne"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <Border Background="#322E40"
                                BorderBrush="{StaticResource ButtonBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="5">
                            <ComboBox ItemsSource="{Binding Topics}"
                                      SelectedItem="{Binding SelectedTopic, Mode=TwoWay}"
                                      DisplayMemberPath="TopicDescription"
                                      Height="45"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Foreground="Black"/>
                        </Border>
                    </StackPanel>

                    <!-- Spacer -->
                    <Grid Grid.Row="3"/>

                    <!-- Gem registrering + bemærkning -->
                    <Grid Grid.Row="4" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Titel ovenover -->
                            <RowDefinition Height="Auto"/>
                            <!-- Bemærkningsfelt -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14*"/>
                            <ColumnDefinition Width="77*"/>
                            <ColumnDefinition Width="365*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tekst ovenover textbox -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Text="Tilføj bemærkning (valgfri)"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="White"
               Margin="0,0,0,4"/>

                        <!-- Bemærkningsfelt -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
            Background="#322E40"
            BorderBrush="{StaticResource ButtonBorderBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Height="80"
            Padding="10"
            Margin="0,0,12,0"
            MinWidth="420">
                            <TextBox Text="{Binding Note, Mode=TwoWay}"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 VerticalContentAlignment="Top"
                 FontSize="14"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="60"
                 MinWidth="420"/>
                        </Border>

                        <!-- Gem-knap -->
                        <Button Grid.Row="1" Grid.Column="3"
            Content="Gem tidsregistrering"
            BorderBrush="{StaticResource AccentBrush}"
            Command="{Binding SaveTimeRecordCommand}"
            Width="160"
            Height="55"
            FontSize="16"
            Margin="0,12,0,12"/>
                    </Grid>

                </Grid>
            </Border>
        </Grid>

    </Border>

</Page>
