<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TimeRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="TimeRecordPage">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Grid.Row="0" 
                   Text="Gem tidsregistrering" 
                   Style="{StaticResource DashboardTitleText}"
                   Margin="0,0,0,30"/>

        <!-- Timer info (read-only display) -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20"
                Padding="20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <StackPanel Margin="0,0,40,0">
                    <TextBlock Text="Timer navn" 
                               FontSize="15"
                               Foreground="#64748B"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TimerName}" 
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource TitleBrush}"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Total tid" 
                               FontSize="15"
                               Foreground="#64748B"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ElapsedTimeDisplay}" 
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Hovedindhold: Vælg virksomhed, projekt, emne + knap -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Vælg virksomhed -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Vælg virksomhed" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TitleBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="White"
                            BorderBrush="{StaticResource AccentBrush}"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="5">
                        <ComboBox ItemsSource="{Binding Companies}"
                                 SelectedItem="{Binding SelectedCompany, Mode=TwoWay}"
                                 DisplayMemberPath="CompanyName"
                                 Height="50"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 />
                    </Border>
                </StackPanel>

                <!-- Vælg projekt -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Vælg projekt" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TitleBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="White"
                            BorderBrush="{StaticResource AccentBrush}"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="5">
                        <ComboBox ItemsSource="{Binding Projects}"
                                 SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                                 DisplayMemberPath="Title"
                                 Height="50"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 />
                    </Border>
                </StackPanel>

                <!-- Vælg emne -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Vælg emne" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TitleBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="White"
                            BorderBrush="{StaticResource AccentBrush}"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="5">
                        <ComboBox ItemsSource="{Binding Topics}"
                                 SelectedItem="{Binding SelectedTopic, Mode=TwoWay}"
                                 DisplayMemberPath="TopicDescription"
                                 Height="50"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Spacer -->
                <Grid Grid.Row="4"/>

                <!-- Gem registrering knap -->
                <StackPanel Grid.Row="5" 
                            HorizontalAlignment="Center">
                    <Button Content="Gem registrering"
                            Style="{StaticResource DashboardButton}"
                            Command="{Binding SaveTimeRecordCommand}"
                            MinWidth="250"
                            Height="50"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>

