<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimerPage">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Grid.Row="0" 
                   Text="Opret timer" 
                   Style="{StaticResource DashboardTitleText}"
                   Margin="0,0,0,30"/>

        <!-- Opret timer sektion -->
        <Border 
                Style="{StaticResource CardStyle}"
                Margin="0,67,-29,20" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Tekstboks til navn -->

                <!-- Opret timer knap -->
                <!-- Tekstboks til navn -->

                <!-- Opret timer knap -->
                <!-- Tekstboks til navn -->

                <!-- Opret timer knap -->
                <!-- Tekstboks til navn -->

                <!-- Opret timer knap -->
                <!-- Tekstboks til navn -->

                <!-- Opret timer knap -->
                <!-- Tekstboks til navn -->
                <Border Background="White"
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="3"
                        CornerRadius="12"
                        Padding="20,12"
                        MinWidth="300">
                    <TextBox x:Name="TimerNameTextBox"
                             Text="{Binding NewTimerName, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{StaticResource TitleBrush}">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Giv timeren et navn" 
                                                                   Foreground="#999999" 
                                                                   FontSize="14"
                                                                   Margin="2,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
                <Button Content="Opret timer"
                        Style="{StaticResource DashboardButton}"
                        Command="{Binding CreateTimerCommand}"
                        MinWidth="150"/>
                

                <!-- Opret timer knap -->
            </StackPanel>
        </Border>

        <!-- Timer liste container - altid synlig -->
        <Border Grid.Row="2"
                Style="{StaticResource CardStyle}"
                MinHeight="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Overskrift for timer liste -->
                <TextBlock Grid.Row="0"
                           Text="Dine timere"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TitleBrush}"
                           Margin="0,0,0,20"/>

                <!-- Timer liste med ScrollViewer -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Timers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        BorderBrush="{StaticResource AccentBrush}"
                                        BorderThickness="2"
                                        CornerRadius="12"
                                        Padding="20"
                                        Margin="0,0,0,15"
                                        Effect="{x:Null}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tid display -->
                                        <Border Grid.Column="0"
                                                Background="#F8FAFC"
                                                BorderBrush="{StaticResource AccentBrush}"
                                                BorderThickness="2"
                                                CornerRadius="8"
                                                Padding="16,10"
                                                MinWidth="120"
                                                Margin="0,0,15,0">
                                            <TextBlock Text="{Binding DisplayTime}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TitleBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Start knap -->
                                        <Button Grid.Column="1"
                                                Content="Start"
                                                Background="#A7F3D0"
                                                Foreground="#065F46"
                                                BorderBrush="#10B981"
                                                BorderThickness="2"
                                                Padding="25,10"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.StartTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,15,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Timer info -->
                                        <StackPanel Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="{Binding TimerName}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TitleBrush}"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding DisplayInfo}"
                                                       FontSize="13"
                                                       Foreground="#64748B"/>
                                            <Button Content="Gem timer"
                                                       Style="{StaticResource DashboardButton}"
                                                       Command="{Binding SaveTimerCommand}"
                                                    FontSize="13"
                                                    Width="100"
                                                    Foreground="#64748B"/>
                                            <Button Content="Slet timer"
                                                        Style="{StaticResource DashboardButton}"
                                                        Command="{Binding DataContext.DeleteTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        FontSize="13"
                                                    Width="100"
                                                        Foreground="#64748B"/>
                                        </StackPanel>

                                        <!-- Stop knap -->
                                        <Button Grid.Column="3"
                                                Content="Stop"
                                                Background="#FECACA"
                                                Foreground="#991B1B"
                                                BorderBrush="#EF4444"
                                                BorderThickness="2"
                                                Padding="25,10"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.StopTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
    </Grid>
</Page>
