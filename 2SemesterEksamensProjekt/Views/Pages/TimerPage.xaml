<!-- Forbedret TimerPage.xaml -->
<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
            d:DesignHeight="800" 
      d:DesignWidth="1200"
      Style="{StaticResource BasePageStyle}"
      Title="TimerPage">

    <!-- Fælles afrundede hjørner + page-baggrund -->
    <Border Style="{StaticResource RoundedPageBorderStyle}">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0" 
                       Text="Opret stopur" 
                       Style="{StaticResource DashboardTitleText}"
                       FontSize="22"
                       Margin="0,0,0,20"/>

            <!-- Opret timer sektion -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Tekstboks til navn -->
                    <Border Background="#322E40"
                            BorderBrush="{StaticResource ButtonBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,0,15,0"
                            MinWidth="300" Height="79" Width="307">
                        <TextBox Text="{Binding TimerName, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="White" Margin="-2,-2,-12,-2"/>
                    </Border>

                    <!-- Opret timer knap -->
                    <Button Content="Opret stopur"
                            Style="{StaticResource DashboardButton}"
                            Command="{Binding CreateTimerCommand}"
                            MinWidth="150"/>
                </StackPanel>
            </Border>

            <!-- Timer liste container -->
            <Border Grid.Row="2"
                    Style="{StaticResource CardStyle}"
                    Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Overskrift -->
                    <TextBlock Grid.Row="0"
                               Text="Dine stopure"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,20"/>

                    <!-- Timer list -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">

                        <ItemsControl ItemsSource="{Binding Timers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Border Style="{StaticResource TimerCardStyle}">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Timer info -->
                                            <StackPanel Grid.Column="0"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="{Binding TimerName}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold" />
                                                <TextBlock Text="{Binding DisplayTime}"
                                                           Foreground="#CCCCCC"
                                                           FontSize="14"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <!-- Start knap -->
                                            <Button Grid.Column="1"
                                                    Content="Start"
                                                    Width="100"
                                                    Height="40"
                                                    Margin="5"
                                                    Background="#A7F3D0"
                                                    Foreground="#065F46"
                                                    BorderBrush="#10B981"
                                                    Command="{Binding DataContext.StartTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>

                                            <!-- Stop knap -->
                                            <Button Grid.Column="2"
                                                    Content="Stop"
                                                    Width="100"
                                                    Height="40"
                                                    Margin="5"
                                                    Background="#FECACA"
                                                    Foreground="#4B0000"
                                                    BorderBrush="#EF4444"
                                                    Command="{Binding DataContext.StopTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>

                                            <!-- Gem knap -->
                                            <Button Grid.Column="3"
                                                    Content="Gem"
                                                    Width="80"
                                                    Height="40"
                                                    Margin="5"
                                                    Command="{Binding DataContext.SaveTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>

                                            <!-- Slet knap -->
                                            <Button Grid.Column="4"
                                                    Content="Slet"
                                                    Width="80"
                                                    Height="40"
                                                    Margin="5"
                                                    Background="#3B0D0D"
                                                    Foreground="White"
                                                    BorderBrush="#802020"
                                                    Command="{Binding DataContext.DeleteTimerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Border>
</Page>

      
