<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TopicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TopicPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top: Header + Menu knap -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Administrer emne"
                       Style="{StaticResource DashboardTitleText}"
                       FontSize="16"
                       HorizontalAlignment="Left"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">

                <!-- Virksomhedsnavn Box -->
                <Border Style="{StaticResource CardStyle}"
                        Padding="15"
                        Height="100"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Emnebeskrivelse"
                                   FontSize="13"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBox Text="{Binding TopicDescription}"
                                 Height="32"
                                 Padding="8"
                                 Background="#F5F5F5"
                                 BorderThickness="0"/>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <Border Style="{StaticResource CardStyle}"
                        Padding="15"
                        Height="180">
                    <StackPanel>
                        <Button Content="Opret emne"
                                Style="{StaticResource DashboardButton}"
                                Margin="0,0,0,10"
                                Command="{Binding CreateTopicCommand}"/>

                        <Button Content="Slet emne"
                                Style="{StaticResource DashboardButton}"
                                Margin="0,0,0,10"
                                Command="{Binding DeleteTopicCommand}"/>

                        <Button Content="Rediger emne"
                                Style="{StaticResource DashboardButton}"
                                Margin="0,0,0,10"
                                Command="{Binding EditSelectedTopicCommand}"/>
                        <Button Content="Gem emne" 
                            Style="{StaticResource DashboardButton}"
                            Width="193" RenderTransformOrigin="0.5,0.5" Height="25"
                            Command="{Binding SaveSelectedTopicCommand}">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.077"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel - Liste -->
            <Border Style="{StaticResource CardStyle}"
                    Grid.Column="1"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Emneliste"
                               Style="{StaticResource DashboardTitleText}"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,20"/>

                    <!-- Liste -->
                    <ListBox Grid.Row="1"
                     ItemsSource="{Binding Topics}"
                     SelectedItem="{Binding SelectedTopic, Mode=TwoWay}"
                     BorderThickness="0"
                     Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="3,0,0,0"
                        Padding="15,10"
                        Margin="0,0,0,5">
                                    <TextBlock Text="{Binding TopicDescription}"
                               FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>