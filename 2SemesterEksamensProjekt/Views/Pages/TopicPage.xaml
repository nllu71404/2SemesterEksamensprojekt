<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.TopicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2SemesterEksamensProjekt.Views.Pages"
      mc:Ignorable="d" 
            d:DesignHeight="800"
      d:DesignWidth="1200"
      Title="TopicPage"
      Style="{StaticResource BasePageStyle}">

    <!-- Fælles afrundet baggrund -->
    <Border Style="{StaticResource RoundedPageBorderStyle}">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Administrer emner"
                           Style="{StaticResource DashboardTitleText}"
                           FontSize="20"
                           HorizontalAlignment="Left"/>
            </Grid>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardStyle}"
                        Padding="15"
                        Margin="0,0,15,0">

                    <StackPanel>

                        <!-- Emnebeskrivelse -->
                        <TextBlock Text="Emnebeskrivelse"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,8"/>

                        <Border Background="#322E40"
                                BorderBrush="{StaticResource ButtonBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="40"
                                Margin="0,0,0,20">

                            <TextBox Text="{Binding TopicDescription}"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="10"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                        </Border>

                        <!-- BUTTONS -->
                        <Button Content="Opret emne"
                                Style="{StaticResource DashboardButton}"
                                Command="{Binding CreateTopicCommand}"
                                Margin="0,0,0,8" Width="275"/>

                        <Button Content="Slet emne"
                                Style="{StaticResource DashboardButton}"
                                Command="{Binding DeleteTopicCommand}"
                                Margin="0,0,0,8" Width="275"/>

                        <Button Content="Rediger emne"
                                Style="{StaticResource DashboardButton}"
                                Command="{Binding EditSelectedTopicCommand}"
                                Margin="0,0,0,8 " Width="275"/>

                        <Button Content="Gem emne"
                                Style="{StaticResource DashboardButton}"
                                Command="{Binding SaveSelectedTopicCommand}"
                                Margin="0,0,0,8" Width="275"/>
                    </StackPanel>
                </Border>

                <!-- RIGHT PANEL: LISTE -->
                <Border Grid.Column="1"
                        Style="{StaticResource CardStyle}"
                        Padding="20">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Overskrift -->
                        <TextBlock Grid.Row="0"
                                   Text="Emneliste"
                                   Style="{StaticResource DashboardTitleText}"
                                   FontSize="18"
                                   Margin="0,0,0,15"/>

                        <!-- Liste -->
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding Topics}"
                                 SelectedItem="{Binding SelectedTopic, Mode=TwoWay}"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,10"
                                            Margin="0,0,0,6"
                                            BorderBrush="{StaticResource AccentBrush}"
                                            BorderThickness="3,0,0,0"
                                            Background="Transparent"
                                            CornerRadius="6">

                                        <TextBlock Text="{Binding TopicDescription}"
                                                   FontSize="14"
                                                   Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Grid>
                </Border>
            </Grid>

        </Grid>

    </Border>

</Page>
