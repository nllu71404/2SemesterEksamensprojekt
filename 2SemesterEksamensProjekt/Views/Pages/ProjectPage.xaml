<Page x:Class="_2SemesterEksamensProjekt.Views.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="900" Height="500">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Administrer projekter"
                 Style="{StaticResource DashboardTitleText}" FontSize="16"
                 HorizontalAlignment="Left"/>
            <Button Content="Menu" Style="{StaticResource DashboardButton}"
              Width="100" Height="40" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Tre kolonner -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- VENSTRE: nu i CardStyle -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Vælg virksomhed" FontSize="13"
                     Foreground="{StaticResource AccentBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Companies}"
                    SelectedItem="{Binding SelectedCompany}"
                    DisplayMemberPath="CompanyName"
                    Height="32" Padding="8,0,0,0"
                    Background="#F5F5F5" BorderThickness="0" Margin="0,0,0,12"/>

                    <TextBlock Text="Projekttitel" FontSize="13"
                     Foreground="{StaticResource AccentBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                   Height="32" Padding="8"
                   Background="#F5F5F5" BorderThickness="0" Margin="0,0,0,20"/>

                    <Button Content="Opret projekt"   Style="{StaticResource DashboardButton}" Margin="0,0,0,8" Command="{Binding CreateProjectCommand}"/>
                    <Button Content="Rediger projekt" Style="{StaticResource DashboardButton}" Margin="0,0,0,8"/>
                    <Button Content="Slet projekt"    Style="{StaticResource DashboardButton}"/>
                </StackPanel>
            </Border>

            <!-- MIDTEN: beskrivelse -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Projektbeskrivelse" FontSize="13"
                     Foreground="{StaticResource AccentBrush}" Margin="0,0,0,8"/>
                    <TextBox Grid.Row="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                   TextWrapping="Wrap" AcceptsReturn="True"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   Padding="10" Background="#F5F5F5" BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- HØJRE: projektliste -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Projektliste"
                     Style="{StaticResource DashboardTitleText}" FontSize="18" Margin="0,0,0,10"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}"
                   Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource AccentBrush}" BorderThickness="3,0,0,0"
                        Padding="15,10" Margin="0,0,0,3" Background="Transparent">
                                    <TextBlock Text="{Binding Title}" FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Page>